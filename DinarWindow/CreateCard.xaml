<Window x:Class="DinarWindow.CreateCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DinarWindow"
        mc:Ignorable="d"
        Title="CreateCard" Height="450" Width="800">
    <Grid>
        <Button x:Name="ButtonCreateCard" Content="Button" HorizontalAlignment="Left" Margin="60,102,0,0" VerticalAlignment="Top" Width="71" Click="ButtonCreateCard_Click"/>
        <TextBox x:Name="TextBoxCardName" HorizontalAlignment="Left" Margin="60,41,0,0" Text="Имя карты" TextWrapping="Wrap" VerticalAlignment="Top" Width="71"/>
        <TextBox x:Name="TextBoxBalance" HorizontalAlignment="Left" Margin="60,64,0,0" Text="Баланс" TextWrapping="Wrap" VerticalAlignment="Top" Width="71"/>

    </Grid>
</Window>
