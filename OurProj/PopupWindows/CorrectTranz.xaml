<Window x:Name="WindowCorrectTranz" x:Class="OurProj.PopupWindows.CorrectTranz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OurProj.PopupWindows"
        mc:Ignorable="d"
        Title="CorrectTranz" Height="250" Width="400" Background="#FFC0E284">
    <Grid>
        <Button x:Name="ButtonChangeTranz" Content="Изменить" HorizontalAlignment="Left" Margin="50,150,0,0" VerticalAlignment="Top" Click="ButtonChangeTranz_Click"/>
        <Button x:Name="ButtonDeleteTranz" Content="Удалить" HorizontalAlignment="Right" Margin="0,150,50,0" VerticalAlignment="Top" Click="ButtonDeleteTranz_Click"/>
        <TextBox x:Name="TextBoxSum" HorizontalAlignment="Left" Margin="30,70,0,0" Height="25" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="TextBoxSum_KeyDown"/>
        <DatePicker x:Name="DatePickerDateOfBought" HorizontalAlignment="Right" Margin="250,70,30,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
