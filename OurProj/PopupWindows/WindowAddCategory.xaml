<Window x:Class="OurProj.PopupWindows.WindowAddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OurProj.PopupWindows"
        mc:Ignorable="d"
        Title="WindowAddCategory" Height="200" Width="200">
    <Grid x:Name="AddCateg" Background="#FF101E7A">
        <TextBox x:Name="TextBoxCatName" HorizontalAlignment="Center" Margin="0,45,0,0" Text="CatName" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="ButtonOK" Content="Добавить" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="120" Click="ButtonOK_Click"/>

    </Grid>
</Window>
