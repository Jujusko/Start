<Window x:Class="OurProj.PopupWindows.CreateCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OurProj.PopupWindows"
        mc:Ignorable="d"
        Title="CreateCard" Height="300" Width="250">
    <Grid x:Name="WindiwNewCard" Background="#FFB857DC">
        <Label x:Name="LabelHelperCardName" Content="Card Name" HorizontalAlignment="Left" Margin="5,15,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelHelperStartBalance" Content="Balance" HorizontalAlignment="Left" Margin="5,50,0,0" VerticalAlignment="Top"/>
        <Button Content="Cashback" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="ButtonOK" Content="Добавить" HorizontalAlignment="Left" Margin="40,230,0,0" VerticalAlignment="Top" Click="ButtonOK_Click"/>
        <TextBox x:Name="TextBoxName" HorizontalAlignment="Left" Margin="120,20,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TextBoxBalance" HorizontalAlignment="Left" Margin="120,55,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
